@page
@model Blog.Pages.Account.EmailChangeModel
@{
    ViewData["Title"] = "Email change";
}

<h2>Email change</h2>

<form method="post">
    <div class="form-group">
        <span>Password: </span>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <span>New E-Mail: </span>
        <input asp-for="NewEMail" />
        <span asp-validation-for="NewEMail"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Send confirmation</button>
    </div>
</form>