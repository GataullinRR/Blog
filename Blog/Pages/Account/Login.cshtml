@page
@model Blog.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <span>Login: </span>
        <input placeholder="Enter login" asp-for="Login">
        <span asp-validation-for="Login"></span>
    </div>

    <div class="form-group">
        <span>Password: </span>
        <input placeholder="Enter password" asp-for="Password">
        <span asp-validation-for="Password"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <a asp-page="/Account/PasswordRestore">Forgot password?</a>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
