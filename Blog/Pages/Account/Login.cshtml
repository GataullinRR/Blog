@page
@model Blog.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="form-sm">
    <form method="post" class="container">
        <h2>Login</h2>

        <div class="form-group">
            <label for="exampleInputEmail1">Login</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter login" asp-for="Login" />
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <a asp-page="/Account/PasswordRestore">Forgot password?</a>
        </div>

        <button type="submit" class="btn btn-primary">Log me in!</button>
    </form>
</div>