@page
@model Blog.Pages.Account.PasswordChangeModel
@{
    ViewData["Title"] = "Password change";
}

<div class="form-sm">
    <form method="post" class="container">
        <h2>Password change</h2>

        <div class="form-group">
            <label>Current password</label>
            <input class="form-control" asp-for="CurrentPassword" />
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <div class="form-group">
            <label>New password</label>
            <input class="form-control" asp-for="NewPassword" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <label>New password confirmation</label>
            <input class="form-control" asp-for="NewPasswordConfirmation" />
            <span class="text-danger" asp-validation-for="NewPasswordConfirmation"></span>
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <button type="submit" class="btn btn-primary">Change password</button>
    </form>
</div>