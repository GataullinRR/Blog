@page
@model Blog.Pages.Account.PasswordChangeModel
@{
    ViewData["Title"] = "Password change";
}

<h2>Password change</h2>

<form method="post">
    <div>
        <span asp-validation-for="NewPassword">New password: </span>
        <input asp-for="NewPassword" />
    </div>
    <div>
        <span asp-validation-for="NewPasswordConfirmation">New password confirmation: </span>
        <input asp-for="NewPasswordConfirmation" />
    </div>
    <div>
        <span asp-validation-for="CurrentPassword">Current password: </span>
        <input asp-for="CurrentPassword" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <button type="submit">Save</button>
    </div>
</form>
