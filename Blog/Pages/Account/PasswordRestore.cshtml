@page
@model Blog.Pages.Account.PasswordRestoreModel
@{
    ViewData["Title"] = "Password reset";
}

<div class="form-sm">
    <form method="post">
        <h2>Password reset</h2>

        <span class="form-caption">Enter your profile name and we will send you new password on your E-Mail provided during registration</span>

        <div class="form-group">
            <label>User name</label>
            <input class="form-control" asp-for="UserName" placeholder="User name" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Send new password</button>
        </div>
    </form>
</div>