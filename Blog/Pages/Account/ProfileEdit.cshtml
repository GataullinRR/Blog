@page
@model Blog.Pages.Account.ProfileEditModel

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="EditUserId" value="@Model.EditUserId" />

        <div class="form-group">
            <div class="col-md-10">
                <p>Profile image</p>
                <input type="file" asp-for="ProfileImage" accept="image/x-png,image/jpeg" />
                <span asp-validation-for="ProfileImage"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <p>About:</p>
                <textarea rows="3" asp-for="About" placeholder="Information about you">@Model.About</textarea>
                <span asp-validation-for="About"></span>
            </div>
        </div>
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div>
            <button type="submit">Save</button>
        </div>
    </form>