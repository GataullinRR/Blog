@page "{id:int}"
@model Blog.Pages.PostModel
@using DBModels

@{
    ViewData["Title"] = Model.Post.Title;
}

<h2>@Model.Post.Title 
    @if ((User.Identity.Name == Model.Post.Author.UserName && Model.Post.Date - DateTime.Now < TimeSpan.FromDays(3))
        || User.IsInRole(Roles.ADMIN))
    { 
        <a asp-page="/PostCreate" asp-route-editingpostid="@Model.Post.Id">Edit</a> 
    }
</h2>

@Model.Post.Body

<hr />
<h3>Commentaries:</h3>

@foreach (var commentary in Model.Commentaries)
{
    @await Html.PartialAsync("_Commentary", commentary);
}

@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-page-handler="AddCommentary">
        <input type="hidden" name="postId" value="@Model.Post.Id" />
        <textarea name="commentBody" rows="3" placeholder="Your comment"></textarea>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <button type="submit">Send</button>
    </form>
}
else
{
    <a asp-page="/Account/Login">Login</a>
    <span> or </span>
    <a asp-page="/Account/Register">register</a>
    <span> to comment</span>
}