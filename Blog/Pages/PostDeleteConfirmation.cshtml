@page
@model Blog.PostDeleteConfirmationModel
@{ 
    ViewData["Title"] = "Post delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="form-sm">
    <form method="post">
        <input type="hidden" asp-for="PostId" value="@Model.PostId"/>
        
        <h2>Post delete</h2>

        <div class="form-group">This action can be undone</div>

        <div class="form-group">
            <textarea class="form-control" asp-for="Reason" placeholder="What was wrong?"></textarea>
            <span class="text-danger" asp-validation-for="Reason"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Delete</button>
        </div>
    </form>
</div>