@page
@model Blog.Pages.PostEditModel
@{
    ViewData["Title"] = "Post edit";
}

<h2>Post edit</h2>

<form method="post">
    <input type="hidden" asp-for="PostId" value="@Model.PostId" />

    <div>
        @if (await Model.Permissions.CanEditPostTitleAsync(Model.Post))
        {
            <input type="text" asp-for="Title" placeholder="Title" />
        }
        else
        {
            <input type="hidden" asp-for="Title" value="@Model.Title" />
            @Model.Title
        }
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <textarea rows="10" asp-for="Body" placeholder="Your post"></textarea>
        <span asp-validation-for="Body"></span>
    </div>

        <div>
            <textarea rows="2" asp-for="EditReason" placeholder="Edit reason"></textarea>
            <span asp-validation-for="EditReason"></span>
        </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <button type="submit">Update</button>
    </div>
</form>