@page
@model Blog.Pages.PostEditModel
@{
    ViewData["Title"] = "Post edit";
}

<div class="container container-main">
    <div class="row">
        <div class="col">
            <form method="post">
                <input type="hidden" asp-for="PostId"/>
                <h2>Post edit</h2>

                <div class="form-group">
                    <label>Title</label>
                    @if (await Model.Permissions.CanEditPostTitleAsync(Model.Post))
                    {
                        <input type="text" class="form-control" asp-for="Title" placeholder="Title" />
                    }
                    else
                    {
                        <input type="hidden" asp-for="Title" value="@Model.Title" />
                        @Model.Title
                    }
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label>Post body</label>
                    <textarea class="form-control rich-edit" asp-for="Body"></textarea>
                    <span class="text-danger" asp-validation-for="Body"></span>
                </div>

                <div class="form-group">
                    <label>Edit reason</label>
                    <textarea rows="3" class="form-control" asp-for="EditReason" placeholder="Edit reason"></textarea>
                    <span class="text-danger" asp-validation-for="EditReason"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">Changes will be applied after moderation</div>
                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </div>
</div>