@model CommentaryModel

<div style="margin-bottom:20px">
    <h4 id="#@Model.Commentary.Id">
        <a asp-page="/Commentary" asp-route-id="@Model.Commentary.Id">#@Model.Commentary.Id</a>
        <a asp-page="/Account/Profile" asp-route-id="@Model.Commentary.Author.Id">@Model.Commentary.Author.UserName</a>
        <span style="float:right">@Model.Commentary.CreationTime.ToString("hh:mm dd.MM.yyyy")</span>
        <span include-if="await Model.Permissions.CanEditCommentaryAsync(Model.Commentary)">| <a href="" class="no-redirect commentary-edit-button">Edit</a></span>
        <span include-if="await Model.Permissions.CanReportAsync(Model.Commentary)" class="btn-report">| <a class="no-redirect" href="" onclick="reportCommentary(this, @Model.Commentary.Id)">Report</a></span>
        <span include-if="await Model.Permissions.CanReportViolationAsync(Model.Commentary)">| <a class="" asp-page="/ViolationReport" asp-page-handler="Commentary" asp-route-id="@Model.Commentary.Id">Report violation</a></span>
        <span include-if="await Model.Permissions.CanDeleteCommentaryAsync(Model.Commentary)">| <a class="operation-danger" asp-controller="@nameof(CommentaryController).GetController()" asp-action="@nameof(CommentaryController.DeleteCommentaryAsync)" asp-route-id="@Model.Commentary.Id">Delete</a></span>
        <span include-if="await Model.Permissions.CanUndeleteCommentaryAsync(Model.Commentary)">| <a class="operation-primary" asp-controller="@nameof(CommentaryController).GetController()" asp-action="@nameof(CommentaryController.UndeleteCommentaryAsync)" asp-route-id="@Model.Commentary.Id">Restore</a></span>
    </h4>

    <div class="d-flex flex-row">
        <div class="d-flex flex-column align-self-center" style="margin-right:20px">
            @await Html.PartialAsync("_ProfileImage", Model.Commentary.Author)
        </div>
        <div class="d-flex flex-column w-100 align-self-center">
            @if (!Model.Commentary.IsDeleted)
            {
                @if (Model.Commentary.IsHidden)
                {
                    <span class="comment-hidden">@Model.Commentary.Body</span>
                }
                else
                {
                    <span>@Model.Commentary.Body</span>
                }
            }
            else
            {
                <span class="comment-deleted">This commentary has been deleted</span>
            }

            @foreach (var edit in Model.Commentary.Edits)
            {
                <div>
                    <span>Edited at @edit.EditTime.ToString("hh:mm dd.MM.yy") by <a asp-page="/Account/Profile" asp-route-id="@edit.Author.Id">@edit.Author.UserName</a></span>
                    @if (edit.Reason.IsNotNullOrWhiteSpace())
                    {
                        <span>Reason: @edit.Reason</span>
                    }
                </div>
            }
        </div>
    </div>
</div>