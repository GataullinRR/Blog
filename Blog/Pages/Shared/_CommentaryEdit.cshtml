<form asp-controller="Commentary" asp-action="UpdateCommentaryAsync" class="form" style="margin-bottom:20px">
    <input type="hidden" asp-for="Id" />

    <h4>
        <a asp-page="/Commentary" asp-route-id="@Model.Id">#@Model.Id</a>
        <a asp-page="/Account/Profile" asp-route-id="@Model.Author.Id">@Model.Author.UserName</a>
        <span style="float:right">@Model.CreationTime.ToString("hh:mm dd.MM.yyyy")</span>
        <button style="display:none;" id="save" type="submit" class="commentary-edit-save-button">Save</button>
        <button style="display:none;" id="cancel" type="button" class="commentary-edit-exit-button">Cancel</button>
        <span>| <a onclick="$('#save').trigger('click')" class="no-redirect operation-primary" href="#">Save</a></span>
        <span>| <a onclick="$('#cancel').trigger('click')" class="no-redirect" href="#">Cancel</a></span>
    </h4>

    <div class="d-flex flex-row">
        <div class="d-flex flex-column align-self-center" style="margin-right:20px">
            @await Html.PartialAsync("_ProfileImage", Model.Author)
        </div>
        <div class="d-flex w-100 flex-column">
            <div class="form-group">
                <label>New commentary body</label>
                <textarea class="form-control" id="" asp-for="Body"></textarea>
            </div>

            <div class="form-group">
                <label>Edit reason</label>
                <input class="form-control" type="text" name="editReason" placeholder="Edit reason" />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</form>

